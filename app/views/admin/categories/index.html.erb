<section class="admin-products-index">

  <header class="page-header">
    <h1>Admin &raquo; All Categories</h1>
  </header>

  <div class="well">
    <%= link_to '+ New Category', [:new, :admin, :category], class: 'btn btn-info' %>
  </div>

  <div class="panel panel-default products">

    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Categories</th>
          <th>Unique Products</th>
        </tr>
      </thead>
      <tbody>
        <% @categories.each do |category| %>
          <%= render 'category', id: category[:id], name: category[:name],  product_count: category[:product_count]%>
        <% end %>
      </tbody>
    </table>

  </div>

</section>
