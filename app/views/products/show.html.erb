<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>
      <h4> Details </h4>
      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= humanized_money_with_symbol @product.price %></dd>
        </dl>
      <h4> Reviews </h4>
      <% if @user %>
      <%= form_for :products, url: "/products/#{@product.id}/reviews" do |f| %>
        <div class="form-group">
          <%= f.label :rating %>
          <%= f.select(:rating, [1,2,3,4,5] , class: 'form-control') %> /5
        </div>
        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_area :description, class: 'form-control' %>
        </div>
        <%= f.submit 'Submit Review', class: 'btn btn-primary' %>
      <% end %>
      <% end %>
        <% @reviews.each do |review| %>
        <dl class="dl-horizontal">
          <dt>Customer</dt>
          <dd><%= review[:user][0].first_name %> <%= review[:user][0].last_name %></dd>
          <dt>Review</dt>
          <dd><%= review[:description] %></dd>
          <dt>Rating</dt>
          <dd><%= review[:rating] %></dd>
        </dl>
        <% end %>
    </div>

  </article>

</section>
